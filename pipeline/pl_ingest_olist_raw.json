									"name": "customer_unique_id",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "customer_zip_code_prefix",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "customer_zip_code_prefix",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "customer_city",
									"type": "String",
